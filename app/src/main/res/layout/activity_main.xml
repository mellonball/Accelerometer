<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreateBS"
        android:id="@+id/buttonCreateBS"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartCollecting"
        android:id="@+id/buttonInvoke"
        android:layout_alignBottom="@+id/buttonCreateBS"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/buttonData"
        android:layout_alignBottom="@+id/buttonInvoke"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/rsa"
        android:layout_toRightOf="@+id/buttonInvoke"
        android:layout_marginTop="61dp"
        android:layout_alignRight="@+id/buttonData"
        android:layout_alignEnd="@+id/buttonData" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/rsg"
        android:layout_below="@+id/rsa"
        android:layout_alignLeft="@+id/rsa"
        android:layout_alignStart="@+id/rsa"
        android:layout_marginTop="115dp"
        android:layout_alignRight="@+id/rsa"
        android:layout_alignEnd="@+id/rsa" />

    <EditText
        android:text="RSA: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/rsg"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:text="RSG: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/rsg"
        android:layout_toLeftOf="@+id/rsg"
        android:layout_toStartOf="@+id/rsg" />

</RelativeLayout>


