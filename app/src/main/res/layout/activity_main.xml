<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreateBS"
        android:id="@+id/buttonCreateBS"
        android:layout_alignTop="@+id/buttonInvoke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartCollecting"
        android:id="@+id/buttonInvoke"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/rsa"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/buttonData"
        android:layout_alignTop="@+id/buttonInvoke"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:id="@+id/rsa"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:id="@+id/rsg"
        android:layout_alignTop="@+id/editText2"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <TextView
        android:text="RSA: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/rsa"
        android:layout_alignRight="@+id/buttonCreateBS"
        android:layout_alignEnd="@+id/buttonCreateBS" />

    <TextView
        android:text="RSG: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/rsa"
        android:layout_alignRight="@+id/buttonInvoke"
        android:layout_alignEnd="@+id/buttonInvoke" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_history_fragment"
        android:layout_below="@id/buttonCreateBS"
        android:name="com.example.breezy.accelerometer.ActivityHistoryFragment"
        />

</RelativeLayout>


