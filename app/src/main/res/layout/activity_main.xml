<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreateBS"
        android:id="@+id/buttonCreateBS"
        android:layout_alignTop="@+id/buttonInvoke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect"
        android:id="@+id/buttonInvoke"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/yGravTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Btn"
        android:id="@+id/buttonData"
        android:layout_alignTop="@+id/buttonInvoke"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YG"
        android:id="@+id/yGravTextView"
        android:layout_below="@+id/yAccelTextView"
        android:layout_alignLeft="@+id/buttonInvoke"
        android:layout_alignStart="@+id/buttonInvoke" />

    <TextView
        android:text="XG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xGravTextView"
        android:layout_alignTop="@+id/yGravTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ZG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zGravTextView"
        android:layout_above="@+id/activityStatusTextView"
        android:layout_alignRight="@+id/zAccelTextView"
        android:layout_alignEnd="@+id/zAccelTextView"
        android:layout_alignTop="@+id/yGravTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X: "
        android:id="@+id/xAccelTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Y: "
        android:id="@+id/yAccelTextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonInvoke"
        android:layout_alignStart="@+id/buttonInvoke" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Z: "
        android:id="@+id/zAccelTextView"
        android:layout_alignLeft="@+id/buttonData"
        android:layout_alignStart="@+id/buttonData"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Currently:"
        android:id="@+id/textView"
        android:layout_below="@+id/xGravTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Activity Status"
        android:id="@+id/activityStatusTextView"
        android:layout_below="@+id/yGravTextView"
        android:layout_alignLeft="@+id/yGravTextView"
        android:layout_alignStart="@+id/yGravTextView" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_history_fragment"
        android:layout_below="@id/buttonCreateBS"
        android:name="com.example.breezy.accelerometer.ActivityHistoryFragment"
        />

</RelativeLayout>


